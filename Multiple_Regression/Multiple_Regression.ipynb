
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_absolute_error, mean_squared_error, r2_score
from mpl_toolkits.mplot3d import Axes3D

df = pd.read_csv("placement_multi.csv")
print(df)

X = df[["cgpa", "iq", "internships"]]
Y = df["package"]

model = LinearRegression()
model.fit(X, Y)

print("\nIntercept (c):", model.intercept_)
print("Slope for CGPA:", model.coef_[0])
print("Slope for IQ:", model.coef_[1])
print("Slope for Internships:", model.coef_[2])

print(
    f"\nRegression Equation:\n"
    f"Package = {model.coef_[0]:.3f}*CGPA + "
    f"{model.coef_[1]:.3f}*IQ + "
    f"{model.coef_[2]:.3f}*Internships + "
    f"{model.intercept_:.3f}"
)

Y_pred = model.predict(X)

print("R2  :", r2_score(Y, Y_pred))

fig = plt.figure(figsize=(10, 7))
ax = fig.add_subplot(111, projection='3d')

ax.scatter(
    df["cgpa"],
    df["iq"],
    df["package"]
)

ax.set_xlabel("CGPA")
ax.set_ylabel("IQ")
ax.set_zlabel("Package")
ax.set_title("3D Plot: CGPA vs IQ vs Package")

cgpa_range = np.linspace(df["cgpa"].min(), df["cgpa"].max(), 10)
iq_range = np.linspace(df["iq"].min(), df["iq"].max(), 10)

cgpa_grid, iq_grid = np.meshgrid(cgpa_range, iq_range)

internship_mean = df["internships"].mean()

X_plane = pd.DataFrame({
    "cgpa": cgpa_grid.ravel(),
    "iq": iq_grid.ravel(),
    "internships": [internship_mean] * len(cgpa_grid.ravel())
})

package_plane = model.predict(X_plane)
package_plane = package_plane.reshape(cgpa_grid.shape)

ax.plot_surface(
    cgpa_grid,
    iq_grid,
    package_plane,
    alpha=0.4
)

plt.show()

